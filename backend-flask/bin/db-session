#! /usr/bin/bash

echo "db-session"

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-session"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"
if [ "$1" == "prod" ]; then
    echo "-----PRODUCTION-----"
    echo "Schema loading"
    URL=$PROD_CONNECTION_URL
else
    echo "-----DEV Database-----"
    echo "Schema loading"
    URL=$CONNECTION_URL
fi

NO_DB_URL=$(sed 's/\/cruddur//g' <<<"$URL")
psql $NO_DB_URL -c "select pid as process_id, \
       usename as user,  \
       datname as db, \
       client_addr, \
       application_name as app,\
       state \
from pg_stat_activity;"
